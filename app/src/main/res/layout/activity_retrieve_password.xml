<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_retrieve_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunduancn.zhongshenjiaoyu.activity.RetrievePasswordActivity">

    <include layout="@layout/home_head"
        android:layout_height="@dimen/dp_44"
        android:layout_width="match_parent"
       />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#f2f2f2"
        />


    <com.yunduancn.zhongshenjiaoyu.view.ClearEditText
        android:id="@+id/edit_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/rounded_corners_4"
        android:layout_marginTop="20dp"
        android:paddingLeft="14dp"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:hint="手机号码"
        android:inputType="phone"
        android:textSize="@dimen/dp_12" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yunduancn.zhongshenjiaoyu.view.ClearEditText
            android:id="@+id/edit_validation"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/rounded_corners_4"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:hint="请输入手机验证码"
            android:inputType="number"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:text="获取短信验证码"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/rounded_corners_4_lan"
            android:id="@+id/validation"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/dp_10"
            android:layout_weight="1" />


    </LinearLayout>


    <com.yunduancn.zhongshenjiaoyu.view.ClearEditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/rounded_corners_4"
        android:layout_marginTop="20dp"
        android:paddingLeft="14dp"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:hint="请重设您的登录密码"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:text="确定修改"
        android:background="@drawable/rounded_corners_4_lan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/dp_50"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        android:id="@+id/textView3" />


</LinearLayout>
