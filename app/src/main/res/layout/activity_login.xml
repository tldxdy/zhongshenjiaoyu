<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.yunduancn.zhongshenjiaoyu.activity.LoginActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corners_18"
        android:gravity="center_vertical"
        android:hint="用户名："
        android:inputType="textPersonName"
        android:maxLines="1"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/dp_12" />


    <EditText
        android:id="@+id/user_pass"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="60dp"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners_18"
        android:gravity="center_vertical"
        android:hint="密码："
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/dp_12"
        android:layout_alignLeft="@+id/user_name"
        android:layout_alignStart="@+id/user_name" />

    <TextView
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:layout_below="@+id/user_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14"
        android:background="@drawable/rounded_corners_18_lan"
        android:id="@+id/login_text" />

    <TextView
        android:text="忘记密码"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/login_text"
        android:layout_alignLeft="@+id/login_text"
        android:layout_alignStart="@+id/login_text"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12"
        android:id="@+id/forgot_password" />

    <TextView
        android:text="用户注册"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/forgot_password"
        android:layout_alignRight="@+id/login_text"
        android:layout_alignEnd="@+id/login_text"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12"
        android:id="@+id/user_registered" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@+id/forgot_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/white"
            android:layout_marginEnd="12dp"
             />

        <TextView
            android:text="使用第三方登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12"
            android:id="@+id/textView2" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/white"
             />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/wechat"
        android:layout_marginTop="38dp"
        android:id="@+id/img_wx"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/qq"
        android:id="@+id/img_qq"
        android:layout_alignTop="@+id/img_wx"
        android:layout_toLeftOf="@+id/img_wx"
        android:layout_toStartOf="@+id/img_wx"
        android:layout_marginRight="60dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/micro_blog"
        android:id="@+id/img_wb"
        android:layout_alignTop="@+id/img_wx"
        android:layout_toRightOf="@+id/img_wx"
        android:layout_toEndOf="@+id/img_wx"
        android:layout_marginLeft="60dp"
         />
</RelativeLayout>
