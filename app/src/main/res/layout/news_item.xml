<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/dp_5"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_5"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"

                android:adjustViewBounds="true"
                app:srcCompat="@drawable/start_bj"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView2" />

            <TextView
                android:text="永恒之蓝来袭"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/color_default"
                android:id="@+id/news_name" />

            <TextView
                android:text="@string/news_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_name"
                android:layout_alignLeft="@+id/news_name"
                android:layout_alignStart="@+id/news_name"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/gray"
                android:maxLines="3"
                android:ellipsize="end"
                android:id="@+id/news_introduction" />
        </RelativeLayout>



    </android.support.v7.widget.CardView>
