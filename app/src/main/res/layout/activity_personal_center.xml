<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunduancn.zhongshenjiaoyu.activity.PersonalCenterActivity">

    <include
        layout="@layout/home_head"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#f2f2f2" />

            <RelativeLayout
                android:id="@+id/touxian_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/forward" />

                <com.yunduancn.zhongshenjiaoyu.view.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@drawable/timg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toEndOf="@+id/user_image"
                    android:layout_toRightOf="@+id/user_image"
                    android:textColor="@color/color_65"
                    android:textSize="@dimen/dp_12"
                    android:visibility="gone" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f2" />

            <RelativeLayout
                android:id="@+id/profession_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toEndOf="@+id/image_wt"
                    android:layout_toRightOf="@+id/image_wt"
                    android:text="职业"
                    android:textColor="@color/color_65"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:id="@+id/image_qm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/forward" />

                <TextView
                    android:id="@+id/profession_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/image_qm"
                    android:layout_toRightOf="@+id/profession"
                    android:layout_toStartOf="@+id/image_qm"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:hint="请输入你的职业"
                    android:textColor="@color/color_98"
                    android:textSize="10dp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f2" />

            <RelativeLayout
                android:id="@+id/signature_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toEndOf="@+id/image_wt"
                    android:layout_toRightOf="@+id/image_wt"
                    android:text="签名"
                    android:textColor="@color/color_65"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:id="@+id/image_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/forward" />

                <TextView
                    android:id="@+id/signature_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/image_signature"
                    android:layout_toRightOf="@+id/signature"
                    android:layout_toStartOf="@+id/image_signature"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:hint="这个人很懒没有签名"
                    android:textColor="@color/color_98"
                    android:textSize="10dp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f2" />

            <RelativeLayout
                android:id="@+id/nickname_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toEndOf="@+id/image_wt"
                    android:layout_toRightOf="@+id/image_wt"
                    android:text="昵称"
                    android:textColor="@color/color_65"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:id="@+id/image_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/forward" />

                <TextView
                    android:id="@+id/nickname_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/image_nickname"
                    android:layout_toRightOf="@+id/nickname"
                    android:layout_toStartOf="@+id/image_nickname"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:hint="这个人很懒，没有备注昵称"
                    android:textColor="@color/color_98"
                    android:textSize="10dp" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f2" />

            <RelativeLayout
                android:id="@+id/sex_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toEndOf="@+id/image_wt"
                    android:layout_toRightOf="@+id/image_wt"
                    android:text="性别"
                    android:textColor="@color/color_65"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:id="@+id/image_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/forward" />

                <TextView
                    android:id="@+id/sex_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/image_sex"
                    android:layout_toRightOf="@+id/sex"
                    android:layout_toStartOf="@+id/image_sex"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="男"
                    android:textColor="@color/color_98"
                    android:textSize="10dp" />


            </RelativeLayout>





            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f2" />

            <RelativeLayout
                android:id="@+id/birthday_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toEndOf="@+id/image_wt"
                    android:layout_toRightOf="@+id/image_wt"
                    android:text="生日"
                    android:textColor="@color/color_65"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:id="@+id/image_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/forward" />

                <TextView
                    android:id="@+id/birthday_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/image_birthday"
                    android:layout_toRightOf="@+id/birthday"
                    android:layout_toStartOf="@+id/image_birthday"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:hint="未填写生日"
                    android:textColor="@color/color_98"
                    android:textSize="10dp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f2" />

            <RelativeLayout
                android:id="@+id/region_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toEndOf="@+id/image_wt"
                    android:layout_toRightOf="@+id/image_wt"
                    android:text="地区"
                    android:textColor="@color/color_65"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:id="@+id/image_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/forward" />

                <TextView
                    android:id="@+id/region_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/image_region"
                    android:layout_toRightOf="@+id/region"
                    android:layout_toStartOf="@+id/image_region"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:hint="未选择所在地"
                    android:textColor="@color/color_98"
                    android:textSize="10dp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f2" />

            <RelativeLayout
                android:id="@+id/binding_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/binding_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toEndOf="@+id/image_wt"
                    android:layout_toRightOf="@+id/image_wt"
                    android:text="绑定手机"
                    android:textColor="@color/color_65"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:id="@+id/image_binding_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/forward" />

                <TextView
                    android:id="@+id/binding_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/image_binding_phone"
                    android:layout_toRightOf="@+id/binding_phone"
                    android:layout_toStartOf="@+id/image_binding_phone"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:hint="未绑定"
                    android:textColor="@color/color_98"
                    android:textSize="10dp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f2" />

            <RelativeLayout
                android:id="@+id/binding_email_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/binding_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toEndOf="@+id/image_wt"
                    android:layout_toRightOf="@+id/image_wt"
                    android:text="绑定邮箱"
                    android:textColor="@color/color_65"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:id="@+id/image_binding_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/forward" />

                <TextView
                    android:id="@+id/binding_email_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/image_binding_email"
                    android:layout_toRightOf="@+id/binding_email"
                    android:layout_toStartOf="@+id/image_binding_email"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:hint="未绑定"
                    android:textColor="@color/color_98"
                    android:textSize="10dp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f2" />

            <RelativeLayout
                android:id="@+id/real_name_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toEndOf="@+id/image_wt"
                    android:layout_toRightOf="@+id/image_wt"
                    android:text="实名认证"
                    android:textColor="@color/color_65"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:id="@+id/image_real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/forward" />

                <TextView
                    android:id="@+id/real_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/image_real_name"
                    android:layout_toRightOf="@+id/real_name"
                    android:layout_toStartOf="@+id/image_real_name"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:hint="未认证"
                    android:textColor="@color/color_98"
                    android:textSize="10dp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f2" />

            <RelativeLayout
                android:id="@+id/school_registration_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/school_registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toEndOf="@+id/image_wt"
                    android:layout_toRightOf="@+id/image_wt"
                    android:text="学籍认证"
                    android:textColor="@color/color_65"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:id="@+id/image_school_registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/forward" />

                <TextView
                    android:id="@+id/school_registration_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/image_school_registration"
                    android:layout_toRightOf="@+id/school_registration"
                    android:layout_toStartOf="@+id/image_school_registration"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:hint="未认证"
                    android:textColor="@color/color_98"
                    android:textSize="10dp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f2" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
