<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_course_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunduancn.zhongshenjiaoyu.activity.CourseQuestionActivity">
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        layout="@layout/home_head"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_20"
                android:layout_height="wrap_content">


                <com.yunduancn.zhongshenjiaoyu.view.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/me"
                android:layout_below="@+id/layout_problem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_12"
                android:textColor="#282828"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/user_name"
                android:layout_alignTop="@+id/user_image"
                android:layout_toRightOf="@+id/user_image"
                android:layout_toEndOf="@+id/user_image" />


            <TextView
                android:text="2017-05-11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_10"
                android:textColor="@color/color_98"
                android:id="@+id/text_time"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/user_name"
                android:layout_alignLeft="@+id/user_name"
                android:layout_alignStart="@+id/user_name" />


                <TextView
                android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_10"
                android:textColor="#282828"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:id="@+id/text_introduction"
                android:layout_below="@+id/user_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="+ 关注"
                    android:textSize="@dimen/dp_12"
                    android:textColor="@color/color_98"
                    android:id="@+id/image_is_gz"
                    android:layout_below="@+id/layout_problem"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <LinearLayout
                    android:id="@+id/layout_problem"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
<!--                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/problem"
                        android:id="@+id/imageView2" />-->


                    <TextView
                        android:text="aaaaa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_title"
                        android:textColor="#282828"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_10"
                        />

                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#66cdcdcd"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginBottom="@dimen/dp_44"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--<com.yunduancn.zhongshenjiaoyu.view.MyListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listView"
                android:dividerHeight="0dp"
                android:divider="#00000000"
                />-->

        </LinearLayout>


    <TextView
        android:id="@+id/myquestion"
        android:text="我要回答"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textSize="@dimen/dp_17"
        android:textColor="@color/white"
        android:background="#129955"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />


</FrameLayout>
