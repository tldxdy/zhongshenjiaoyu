<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_information_modify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunduancn.zhongshenjiaoyu.activity.PersonalInformationModifyActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/back"
            android:id="@+id/back_image" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/color_default"
            android:id="@+id/title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_image"
            android:layout_toEndOf="@+id/back_image" />

        <TextView
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/dp_16"
            android:paddingRight="@dimen/dp_15"
            android:gravity="center"
            android:id="@+id/determine" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="top|left"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text=""
            android:maxLength="128"
            android:inputType="textMultiLine"
            android:hint="请输入编写内容"
            android:textSize="@dimen/dp_12"
            android:id="@+id/editText" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_alignRight="@+id/editText"
            android:layout_alignEnd="@+id/editText"
            android:textColor="@color/color_98"
            android:textSize="@dimen/dp_12"
            android:id="@+id/num" />
    </RelativeLayout>


</LinearLayout>
