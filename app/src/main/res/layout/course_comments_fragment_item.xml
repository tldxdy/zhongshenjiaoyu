<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@drawable/layout_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_20"
        android:layout_height="wrap_content">

        <com.yunduancn.zhongshenjiaoyu.view.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/me"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/user_image"
            android:layout_toEndOf="@+id/user_image"
            android:textSize="@dimen/dp_12"
            android:textColor="#282828"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/user_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone"
            app:srcCompat="@mipmap/is_dz_n"
            android:id="@+id/image_is_dz"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="0"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/image_is_dz"
            android:layout_toStartOf="@+id/image_is_dz"
            android:id="@+id/text_num" />

        <TextView
            android:text="2017-05-11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/color_98"
            android:id="@+id/text_time"

            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignBottom="@+id/user_name"
            android:layout_toRightOf="@+id/user_name"
            android:layout_toEndOf="@+id/user_name" />


        <com.yunduancn.zhongshenjiaoyu.view.CustonRatingbar
            android:id="@+id/rateingbar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:cr_like_src="@mipmap/star"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            app:cr_size="@dimen/dp_10"
            app:cr_src="@mipmap/star2"
            android:layout_below="@+id/user_name"
            android:layout_alignLeft="@+id/user_name"
            android:layout_alignStart="@+id/user_name" />


        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:textColor="#282828"
            android:ellipsize="end"
            android:id="@+id/text_introduction"
            android:layout_below="@+id/user_image"
            android:layout_alignLeft="@+id/rateingbar"
            android:layout_alignStart="@+id/rateingbar" />
        <!--android:maxLines="2"-->

    </RelativeLayout>
    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_0.5"
         android:background="@color/color_6698"/>-->
</LinearLayout>
