<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/boot_page1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/course_img" />

        <TextView
            android:text="人力资源管理"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/course_img"
            android:layout_toEndOf="@+id/course_img"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:textSize="@dimen/dp_12"
            android:textColor="#282828"
            android:id="@+id/course_name" />

        <TextView
            android:text="人力资源管理，是指在经济学与人本思想指导下，通过招聘、甄选、培训、报酬等管理形式对组织内外相关人力资源进行有效运用，满足组织当前及未来发展的需要，保证组织目标实现与成员发展的最大化的一系列活动的总称。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_name"
            android:layout_alignLeft="@+id/course_name"
            android:layout_alignStart="@+id/course_name"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/color_65"
            android:textSize="@dimen/dp_10"
            android:id="@+id/course_describe"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="已学习到：人力资源国际形态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_study"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_98"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/dp_10"
            android:layout_below="@+id/course_describe"
            android:layout_alignLeft="@+id/course_describe"
            android:layout_alignStart="@+id/course_describe"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
