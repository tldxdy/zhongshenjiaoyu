<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunduancn.zhongshenjiaoyu.fragment.Course_DetailsFragment">
    <com.yunduancn.zhongshenjiaoyu.view.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <View
            android:layout_width="3dp"
            android:layout_height="14dp"
            android:background="#1c9f5c"
            android:id="@+id/view" />


        <TextView
            android:text="课程介绍："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            />

    </LinearLayout>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:id="@+id/text_introduce" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f2f2f2"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <View
            android:layout_width="3dp"
            android:layout_height="14dp"
            android:background="#1c9f5c"
            />


        <TextView
            android:text="课程提纲："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            />

    </LinearLayout>

    <com.yunduancn.zhongshenjiaoyu.view.MyListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        />

            </LinearLayout>
    </com.yunduancn.zhongshenjiaoyu.view.MyScrollView>

</LinearLayout>
