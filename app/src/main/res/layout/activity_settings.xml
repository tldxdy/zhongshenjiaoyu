<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/home_head"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f2f2f2"
        />


    <RelativeLayout
        android:id="@+id/user_information_layout"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/layout_selector"
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />

        <com.yunduancn.zhongshenjiaoyu.view.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/me"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/color_65"
            android:textSize="@dimen/dp_14"
            android:id="@+id/user_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_image"
            android:layout_toEndOf="@+id/user_image" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/color_f2"
        />

    <RelativeLayout
        android:id="@+id/cache_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@drawable/layout_selector"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:text="清除缓存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:textColor="@color/color_65"
            android:textSize="@dimen/dp_14"
            android:layout_toRightOf="@+id/image_wt"
            android:layout_toEndOf="@+id/image_wt" />

        <TextView
            android:text="15MB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_20"
            android:id="@+id/cache_num" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/color_f2"
        />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">



        <TextView
            android:text="视频自动播放"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_65"
            android:textSize="@dimen/dp_14"
            android:layout_toRightOf="@+id/image_wt"
            android:layout_toEndOf="@+id/image_wt" />

        <android.support.v7.widget.SwitchCompat
            android:text="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:checked = "true"
            android:id="@+id/switchcompat" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/color_f2"
        />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@drawable/layout_selector"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:text="常见问题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_65"
            android:textSize="@dimen/dp_14"
            android:layout_toRightOf="@+id/image_wt"
            android:layout_toEndOf="@+id/image_wt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/color_f2"
        />
    <RelativeLayout
        android:id="@+id/feedback_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@drawable/layout_selector"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:text="意见反馈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_65"
            android:textSize="@dimen/dp_14"
            android:layout_toRightOf="@+id/image_wt"
            android:layout_toEndOf="@+id/image_wt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/color_f2"
        />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@drawable/layout_selector"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:text="版本更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_65"
            android:textSize="@dimen/dp_14"
            android:layout_toRightOf="@+id/image_wt"
            android:layout_toEndOf="@+id/image_wt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/color_f2"
        />
    <RelativeLayout
        android:id="@+id/about_us"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@drawable/layout_selector"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_65"
            android:textSize="@dimen/dp_14"
            android:layout_toRightOf="@+id/image_wt"
            android:layout_toEndOf="@+id/image_wt"
            android:text="关于我们" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/color_f2"
        />

    <TextView
        android:text="退出登录"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/exit_login"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_17"
        android:id="@+id/exit_login" />


</LinearLayout>
