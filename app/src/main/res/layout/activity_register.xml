<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.yunduancn.zhongshenjiaoyu.activity.LoginActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corners_18"
        android:gravity="center_vertical"
        android:hint="手机号："
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/dp_12" />
    
    
    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/user_name"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/captcha_edit"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="36dp"
            android:background="@drawable/rounded_corners_18"
            android:gravity="center_vertical"
            android:hint="验证码："
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginRight="10dp"
            android:paddingLeft="18dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/dp_12" />
        <TextView
            android:id="@+id/captcha"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="36dp"
            android:background="@drawable/rounded_corners_18_lan"
            android:gravity="center"
            android:hint="获取验证码"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/dp_10" />

    </LinearLayout>


    <EditText
        android:id="@+id/user_pass"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="60dp"
        android:layout_below="@+id/user_layout"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners_18"
        android:gravity="center_vertical"
        android:hint="密码："
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/dp_12"
        android:layout_alignLeft="@+id/user_layout"
        android:layout_alignStart="@+id/user_layout" />


    <EditText
        android:id="@+id/user_passs"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="60dp"
        android:layout_below="@+id/user_pass"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners_18"
        android:gravity="center_vertical"
        android:hint="确认密码："
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/dp_12"
        android:layout_alignLeft="@+id/user_pass"
        android:layout_alignStart="@+id/user_pass" />

    <LinearLayout
        android:id="@+id/la_xy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/user_passs"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12"
        android:text="点击注册表示同意"
        />
        <TextView
            android:id="@+id/text_xy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/dp_12"
            android:text="注册协议"
            />

    </LinearLayout>



    <TextView
        android:text="注册"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:layout_below="@+id/la_xy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14"
        android:background="@drawable/rounded_corners_18_lan"
        android:id="@+id/login_text" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_return"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:id="@+id/image_back" />


</RelativeLayout>
