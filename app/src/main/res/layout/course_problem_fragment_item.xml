<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@drawable/layout_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_20"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_problem"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/problem"
                android:id="@+id/imageView2" />


            <TextView
                android:text="aaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_title"
                android:textColor="#282828"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_10"
                 />

        </LinearLayout>



        <com.yunduancn.zhongshenjiaoyu.view.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/me"
            android:layout_below="@+id/layout_problem"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="#282828"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/user_name"
            android:layout_alignTop="@+id/user_image"
            android:layout_toRightOf="@+id/user_image"
            android:layout_toEndOf="@+id/user_image" />


        <TextView
            android:text="2017-05-11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/color_98"
            android:id="@+id/text_time"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/user_name"
            android:layout_alignLeft="@+id/user_name"
            android:layout_alignStart="@+id/user_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone"
            app:srcCompat="@mipmap/is_dz_n"
            android:id="@+id/image_is_dz"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="0"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/image_is_dz"
            android:layout_toStartOf="@+id/image_is_dz"
            android:id="@+id/text_num" />


        <TextView
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:maxLines="2"
            android:textColor="#282828"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:id="@+id/text_introduction"
            android:layout_below="@+id/user_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




    </RelativeLayout>
    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_0.5"
         android:background="@color/color_6698"/>-->
</LinearLayout>
